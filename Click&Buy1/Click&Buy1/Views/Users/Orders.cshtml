@model IEnumerable<Click_Buy1.Models.Orders>

@{
    ViewData["Title"] = "User Orders";

    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2 class="text-center mb-4">Orders for @Context.Request.Query["email"]</h2>

@if (!Model.Any())

{
    <p class="text-center text-danger">No orders found for this user.</p>
}

else

{
    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)

            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>$@order.TotalAmount</td>
                </tr>
            }
        </tbody>
    </table>
}
<a class="btn btn-primary" href="@Url.Action("Index", "Users")">Back to Users</a>