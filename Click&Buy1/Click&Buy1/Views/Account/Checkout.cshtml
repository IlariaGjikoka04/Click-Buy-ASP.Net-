@model List<AddToCart>

<h1>Order Summary</h1>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td>@item.Name</td>
                <td><img src="@item.ImageUrl" alt="@item.Name" width="50" /></td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @Model.Sum(item => item.Price * item.Quantity).ToString("C")</h3>

<button class="btn btn-success">Complete Order</button>