@model Click_Buy1.Models.AddToCart

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-danger">Delete Product</h1>

<h3 class="text-center">Are you sure you want to delete this item?</h3>

<div class="card mx-auto mt-4 shadow" style="max-width: 500px;">
    <div class="card-body">
        <h4 class="card-title text-center mb-4 text-uppercase">Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Product Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">Image</dt>
            <dd class="col-sm-8">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-width: 200px; max-height: 200px;" />
            </dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">$@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-4">Quantity</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

        </dl>
    </div>

    <div class="card-footer text-center">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
        </form>
    </div>
</div>