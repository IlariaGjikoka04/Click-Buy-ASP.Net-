<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Click_Buy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Click_Buy1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body data-user-authenticated="@User.Identity.IsAuthenticated">
   <header>
     <div class="container-fluid">
         <nav class="navbar navbar-expand-lg navbar-dark bg-black">
             <a class="navbar-brand" href="#">Click&Buy</a>
             <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon"></span>
             </button>
             <div class="collapse navbar-collapse" id="navbarNav">
                 <ul class="navbar-nav ms-auto">
                     <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
 
                             <!-- Log In Link -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Logout Link -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">
                                    <i class="fa-regular fa-user"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Log In Link -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@ViewContext.HttpContext.Request.Path">
                                    <i class="fa-regular fa-user"></i> Log in
                                </a>
                            </li>
                        }
                        @if(User.IsInRole("Admin"))
{
                        <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index"><i class="fa-solid fa-user-tie"></i>  Admin</a>
                        </li>
}
                     <li class="nav-item">
                         <a class="nav-link" href="#" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas" aria-controls="cartOffcanvas">
                             <i class="fa fa-shopping-cart"></i>
                         </a>
                     </li>
                 </ul>
             </div>
         </nav>
     </div>

 </header>

               


    <!-- Offcanvas për shportën -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas" aria-labelledby="cartOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="cartOffcanvasLabel">Basket</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div id="cartItems">
                <p class="text-center">Your basket is still empty, discover everything we've got for you</p>
            </div>
            <a class="btn btn-dark w-100 mt-3" asp-controller="Checkout" asp-action="Index">
    Checkout
</a>
        </div>
    </div>
    <div>
        <main role="main">
 
            @RenderBody()
 
        </main>
    </div>
    <footer class="footer bg-black text-light py-4 mt-3">
        <div class="container">
            <div class="row justify-content-center text-center">
                <!-- Kolona 1 -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase mb-3">You may be interested in</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Jackets", "Home")" class="text-light text-decoration-none">Jackets</a></li>
                        <li><a href="@Url.Action("Dresses", "Home")" class="text-light text-decoration-none">Dresses</a></li>
                        <li><a href="@Url.Action("Jeans", "Home")" class="text-light text-decoration-none">Jeans</a></li>
                        <li><a href="@Url.Action("SweatersANDcardigans", "Home")" class="text-light text-decoration-none">Sweaters and Cardigans</a></li>
                        <li><a href="@Url.Action("Trousers", "Home")" class="text-light text-decoration-none">Trousers</a></li>
                        <li><a href="@Url.Action("Tshirts", "Home")" class="text-light text-decoration-none">T-shirts</a></li>
                    </ul>
                </div>
                <!-- Kolona 2 -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase mb-3">Support</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none">Help</a></li>
                        <li><a href="#" id="payment-link" class="text-light text-decoration-none">Payment</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Delivery</a></li>
                    </ul>
                </div>
                <!-- Kolona 3 -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase mb-3">Follow Us</h5>
                    <div class="d-flex justify-content-center">
                        <a href="https://www.facebook.com/" class="me-3 text-light text-decoration-none"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="https://x.com/?lang=en" class="me-3 text-light text-decoration-none"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="https://www.instagram.com/" class="me-3 text-light text-decoration-none"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="https://www.linkedin.com/login" class="text-light text-decoration-none"><i class="bi bi-linkedin fs-4"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
